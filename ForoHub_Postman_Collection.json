				},
				{
					"name": "Error - Tópico No Encontrado",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/topicos/999999",
							"host": ["{{baseUrl}}"],
							"path": ["topicos", "999999"]
						}
					}
				}
			]
		}
	]
}
